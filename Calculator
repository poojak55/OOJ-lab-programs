#include<stdio.h>

#include<math.h>
#include<stdlib.h>
int main()
{
    
char c;
int num1, num2, res = 0;

while(1)
{
printf("\nEnter First Value:");
scanf("%d",&num1);

printf("\nEnter Operator\n+ addition,\n - subtraction,\n * multiplication,\n / division ,\n r remainder ,\n ^ num1( power)num2 ,\n < less than ,\n > greater than,\n = equal to,\n ! not equal to,\n E TO EXIT ");

scanf(" %c",&c);

printf("\nEnter Second Value:");
scanf("%d",&num2);

switch(c)
{
case '+':
   res = num1 + num2;
   printf("\nSum is = %d",res);
 break;
 
case '-':
  res = num1 - num2;
   printf("\nDifference is = %d",res);
   printf("\n\n Enter value  Again for a New Input\n");
 break;
 
case '*':
   res = num1 * num2;
   printf("\nProduct is = %d",res);
   printf("\n\n Enter value Again for a New Input\n");
 break;
 
case '/':
   res = num1 /num2;
   printf("\nQuotient is = %d",res);
   printf("\n\n Enter value Again for a New Input\n");
 break;
 
case 'r':
   res = num1 % num2;
   printf("\nReminder is = %d",res);
   printf("\n\n Enter value Again for a New Input\n");
    break;
   
 case '>':
 if(num1>>num2)
 {
 printf("yes");
 }
 else{
      printf("\n\nNo");
       printf("\n Enter value Again for a New Input\n");
 }
  break;
 
 case '<':
 if(num1>>num2)
 {
 printf("no");
 }
 else{
      printf("\n\nyes");
     printf("\n Enter value Again for a New Input\n");
 }
  break;
  
 case '=':
 if(num1==num2)
 {
 printf("yes");
 }
 else{
      printf("\n\nno");
     printf("\n Enter value Again for a New Input\n");
 }
 break; 
 case '^':
 printf("%lf",pow(num1,num2));
 break; 
 
 case '!':
 if(num1==num2)
 {
 printf("no");
 }
 else{
      printf("\n\nyes");
     printf("\n Enter value Again for a New Input\n");
 }
 break;
 case 'E':
   exit(0);
   break;
 
default:
   printf("\nEnter value Valid Operator!!!\n");
   printf("\n\n Enter value Again for a New Input\n");
}
getch();
}
return 0;
}
